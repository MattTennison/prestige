{
	"name": "prestige-rest-client",
	"version": "1.0.0",
	"description": "An HTTP client, by Shrikant.",
	"author": "Shrikant Sharat Kandula <shrikantsharat.k@gmail.com>",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/sharat87/prestige/issues"
	},
	"homepage": "https://github.com/sharat87/prestige",
	"browserslist": [
		"last 2 Chrome versions",
		"last 2 Firefox versions",
		"last 2 Edge versions",
		"last 2 Safari versions"
	],
	"scripts": {
		"build": "node manage.js build",
		"start": "node manage.js serve",
		"lint": "tsc --noEmit --project . && eslint --report-unused-disable-directives --ignore-path .gitignore .",
		"lint_fix": "eslint --fix --fix-type problem,suggestion,layout --ignore-path .gitignore .",
		"test": "jest"
	},
	"jest": {
		"preset": "ts-jest",
		"moduleNameMapper": {
			"\\.(css|less)$": "identity-obj-proxy"
		}
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es2020": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 11,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"indent": [
				"error",
				"tab"
			],
			"no-tabs": [
				"error",
				{
					"allowIndentationTabs": true
				}
			],
			"max-len": [
				"error",
				{
					"code": 120,
					"tabWidth": 4,
					"ignoreComments": false,
					"ignoreTrailingComments": false,
					"ignoreStrings": false,
					"ignoreTemplateLiterals": false
				}
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"double"
			],
			"semi": [
				"error",
				"always"
			],
			"comma-dangle": [
				"error",
				"always-multiline"
			],
			"capitalized-comments": "error",
			"eol-last": "error",
			"no-trailing-spaces": "error",
			"camelcase": "error",
			"brace-style": [
				"error",
				"1tbs"
			],
			"object-curly-spacing": [
				"error",
				"always"
			],
			"curly": [
				"error",
				"all"
			],
			"eqeqeq": [
				"error",
				"always",
				{
					"null": "ignore"
				}
			],
			"no-shadow": [
				"error",
				{
					"allow": [
						"resolve",
						"reject",
						"done"
					]
				}
			],
			"no-var": "error",
			"prefer-const": "error",
			"no-lonely-if": "error",
			"no-multiple-empty-lines": "error"
		}
	},
	"devDependencies": {
		"@babel/core": "^7.11.4",
		"@types/codemirror": "0.0.98",
		"@types/jest": "^26.0.10",
		"@types/mithril": "^2.0.3",
		"@typescript-eslint/eslint-plugin": "^4.2.0",
		"@typescript-eslint/parser": "^4.2.0",
		"babel-plugin-transform-remove-console": "^6.9.4",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.7.0",
		"codemirror": "^5.58.0",
		"eslint": "^7.7.0",
		"firebase": "^7.19.1",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.4.2",
		"jsdom": "^16.3.0",
		"jstransformer-markdown-it": "^2.1.0",
		"less": "^3.11.3",
		"mithril": "^2.0.4",
		"parcel-bundler": "^1.12.4",
		"postcss": "^8.1.0",
		"postcss-import": "^12.0.1",
		"pug": "^3.0.0",
		"remixicon": "^2.5.0",
		"sass": "^1.26.11",
		"tachyons": "^4.12.0",
		"tailwindcss": "^1.8.10",
		"ts-jest": "^26.3.0",
		"tslint": "^6.1.2",
		"typescript": "^4.0.2"
	}
}
