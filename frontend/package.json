{
	"name": "prestige-rest-client",
	"version": "1.0.0",
	"description": "Just an HTTP client, by Shrikant.",
	"author": "Shrikant Sharat Kandula <shrikantsharat.k@gmail.com>",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/sharat87/prestige/issues"
	},
	"homepage": "https://github.com/sharat87/prestige",
	"browserslist": [
		"last 2 Chrome versions",
		"last 2 Firefox versions",
		"last 2 Edge versions",
		"last 2 Safari versions"
	],
	"scripts": {
		"build": "node manage.js build",
		"start": "node manage.js serve",
		"lint": "tsc --noEmit --project . && eslint --report-unused-disable-directives src",
		"lint_fix": "eslint --fix --fix-type problem,suggestion,layout --ignore-path ../.gitignore src",
		"test": "jest"
	},
	"jest": {
		"preset": "ts-jest"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"overrides": [
			{
				"files": [
					"src/scripts/*.ts",
					"src/tests/*.ts"
				],
				"excludedFiles": [
					"node_modules",
					"dist",
					"coverage"
				]
			}
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 11,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"indent": [
				"error",
				"tab"
			],
			"no-tabs": [
				"error",
				{
					"allowIndentationTabs": true
				}
			],
			"max-len": [
				"error",
				{
					"code": 120,
					"tabWidth": 4,
					"ignoreComments": false,
					"ignoreTrailingComments": false,
					"ignoreStrings": false,
					"ignoreTemplateLiterals": false
				}
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"no-unused-vars": "error",
			"no-unused-expressions": "error",
			"quotes": "off",
			"@typescript-eslint/quotes": [
				"error",
				"double"
			],
			"semi": "off",
			"@typescript-eslint/semi": [
				"error",
				"never"
			],
			"comma-dangle": "off",
			"@typescript-eslint/comma-dangle": [
				"error",
				"always-multiline"
			],
			"capitalized-comments": "error",
			"eol-last": "error",
			"no-trailing-spaces": "error",
			"camelcase": "error",
			"brace-style": "off",
			"@typescript-eslint/brace-style": [
				"error",
				"1tbs"
			],
			"object-curly-spacing": [
				"error",
				"always"
			],
			"curly": [
				"error",
				"all"
			],
			"eqeqeq": [
				"error",
				"always",
				{
					"null": "ignore"
				}
			],
			"no-shadow": [
				"warn",
				{
					"allow": [
						"resolve",
						"reject",
						"done"
					]
				}
			],
			"no-var": "error",
			"prefer-const": "error",
			"no-lonely-if": "error",
			"no-multiple-empty-lines": "error",
			"@typescript-eslint/no-for-in-array": "error"
		}
	},
	"devDependencies": {
		"@types/codemirror": "0.0.98",
		"@types/jest": "^26.0.20",
		"@types/lodash": "^4.14.168",
		"@types/mithril": "^2.0.6",
		"@typescript-eslint/eslint-plugin": "^4.14.2",
		"@typescript-eslint/parser": "^4.14.2",
		"codemirror": "^5.59.2",
		"eslint": "^7.19.0",
		"jest": "^26.6.3",
		"less": "^4.1.1",
		"lodash": "^4.17.20",
		"mithril": "^2.0.4",
		"parcel-bundler": "^1.12.4",
		"remixicon": "^2.5.0",
		"tachyons": "^4.12.0",
		"ts-jest": "^26.5.0",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3"
	}
}
