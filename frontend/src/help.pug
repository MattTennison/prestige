			| a { color: #36F; }
			| p { text-indent: 3ch; }
			| pre, code, tt { font-family: "Fira Mono", monospace; font-size: .95em; }
			| pre { background-color: rgba(0, 0, 0, .05); border-radius: 3px; padding: 6px; margin: 1em; overflow-x: auto }
			| .page-end { font-size: 2em; text-align: center; margin: 2em 0 3em; }

